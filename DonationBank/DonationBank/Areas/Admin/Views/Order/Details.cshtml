@{
    @model DonationBank.Models.VM.OrderVM
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

</head>
<body>
    @if (TempData["success"] != null)
    {
        <h2>@TempData["success"]</h2>
    }
    <div class"container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">OrderDeatils List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Order" asp-action="Index" class="btn btn-primary ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg> &nbsp; Create new category
                </a>
            </div>

        </div>
    </div>

    <table class="table" style="width:100%">
        <thead>
            <tr>
                
                <th>
                    ProductId
                </th>
                <th>
                    ProductSize
                </th>
                <th>
                    ProductCategory
                </th>
                <th>
                    ProductDescription
                </th>
                <th>
                    ProductImage
                </th>
            </tr>
        </thead>
        <tbody>
           
            @foreach (var obj in Model.Details)
            {
              
                <tr>
                    <td width="50%">
                        @obj.Product.Id
                    </td>
                    <td width="30%">
                        @obj.Product.Size
                    </td>
                    <td width="30%">
                        @obj.Product.Category
                    </td>
                     <td width="30%">
                        @obj.Product.Description
                    </td>
                    <td width="30%">
                      <img src="@obj.Product.ImagePath" style="width:100%;">
                    </td>
                    <td width="20%">
                        <a asp-controller="Order" asp-action="Index">BackToOrderHeader</a>
                       
                    </td>

                </tr>

            }
        </tbody>
    </table>

</body>
</html>