@{
}
@model ShoppingCart
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Details</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">
<style>
        body {
            background-image: linear-gradient(#4C7397, #E0E5EB);
            font-family: cursive;
        }

        #back {
            height: 50px;
            width: 50px;
            left: 37px;
            top: 104px;
            border-radius: 50%;
        }

            #back:hover {
                background-color: #4C7397;
                
            }

        .ProductImg{
            border-radius: 30px;
            height: 300px;
            width: 300px;
           
        }

        .AddBtn {
            height: 52px;
            width: 20px;
            border-radius: 30px;
            background-color: #4C7397;
        }

            .AddBtn:hover {
                background-color: black;
                color: white;
            }
    </style>
</head>
    <body>
    <form method="post" class="d-flex justify-content-center text-center  " style="margin-top:100px;">
        <a asp-controller="Home" asp-action="Showproduct"><img src="/Image/left-arrow.png" id="back"> </a>
        <div class="row   " style=" ">
            

            <input hidden asp-for="@Model.ProductId" />
          

            <div>
                <img class="ProductImg m-1" src="@Model.Product.ImagePath" />
            </div>
            <br >
            <div>
                
                <p style=" font-size: 15px;">@Model.Product.Description </p>
                <p style=" font-size: 12px;">@Model.Product.Category</p>
                <p style=" font-size: 12px;">@Model.Product.Size</p>
              
                <button type="submit" value="Add to Cart" class="AddBtn" style="height:50px; width: 200px;">Add to Cart</button>
            </div>




        </div>
    </form>


</body>
</html>
        
 

    
    
