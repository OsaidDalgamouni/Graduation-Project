@{
    var Category = Context.Request.Query["Category"];
    var All = "font";
    var Woman = "font";
    var Men = "font";
    var Kids = "font";
    switch (Category)
    {
       
        case "Woman":
            Woman = "active text-black";
            break;
        case "Men":
            Men = "active text-black";
            break;
        case "Kids":
            Kids = "active text-black";
            break;
            default:
            All = "active text-black";
            break;
    }
}
@model IEnumerable<Product>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Details</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">
<style>
        body {
            background-color: #E4EBF3;
            font-family: cursive;
        }
        .font{
            color:white;
        }
</style>
</head>
<body>


<div class" p-3" style="margin-top:60px;">
    <div class="d-flex justify-content-between pt-4 ">
            <div class="col-6 d-flex border-white ">
                <a class="" style="text-decoration:none;color:#4C7397;" asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </svg>
                </a>
                <p class="  " style="margin:3px;">Cart</p>
        </div>
        <div class="p-2 ">
            <ul class="list-group list-group-horizontal ">
                <a style="text-decoration:none;" asp-controller="Home" asp-action="Showproduct" asp-route-Category="All">
                    <li class="list-group-item @All rounded-pill border-white " style="background-color:#4C7397;">All</li>
                </a>
                <a style="text-decoration:none;" asp-controller="Home" asp-action="Showproduct" asp-route-Category="Woman">
                    <li class="list-group-item @Woman rounded-pill border-white" style="background-color:#4C7397;">Women</li>
                </a>
                <a style="text-decoration:none;" asp-controller="Home" asp-action="Showproduct" asp-route-Category="Men">
                    <li class="list-group-item @Men rounded-pill border-white" style="background-color:#4C7397;">Men</li>
                </a>
                <a style="text-decoration:none;" asp-controller="Home" asp-action="Showproduct" asp-route-Category="Kids">
                    <li class="list-group-item @Kids rounded-pill border-white" style="background-color:#4C7397;">Kids</li>
                </a>
                
            </ul>
        </div>

    </div>
    </div>

    <br />
<div class="row d-flex justify-content-center ">
    @foreach (var product in Model)
    {
        @if (product.Accepted)
        {

                <div class="card m-3 col-lg-3 col-md-3 col-sm-6 " style="width: 18rem; background-color:#E0E5EB;">
                    <img src="@product.ImagePath" class="card-img-top m-1 " alt="@product.Description" style="height: 150px;width:100%; border-radius: 20px;  ">
                <div class="card-body">
                    <h5 class="card-title">@product.Category</h5>
                    <h5 class="card-title">@product.Size</h5>
                    <p class="card-text">@product.Description</p>
                        <a asp-action="Details" asp-route-ProductId="@product.Id" class="btn btn-primary border-white d-flex justify-content-center  text-center" style="background-color:#4C7397;">Details</a>
                </div>
            </div>
        
                        
      }

    }
</div>
</body>
</html>